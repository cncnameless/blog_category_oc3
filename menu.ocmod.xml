<?xml version="1.0" encoding="utf-8"?>
<modification>
    <name>Add Blog Categories to Catalog Menu</name>
    <version>1.0</version>
    <author>Grok</author>
    <code>add_blog_menu</code>
    <file path="admin/language/*/catalog/catalog.php">
        <operation>
            <search><![CDATA[$_['text_information']]]></search>
            <add position="after"><![CDATA[
            $_['text_blog_category'] = 'Blog Categories';
            ]]></add>
        </operation>
    </file>
    <file path="admin/controller/common/column_left.php">
        <operation>
            <search><![CDATA[$catalog[] = array(]]></search>
            <add position="before" index="3"><![CDATA[
            if ($this->user->hasPermission('access', 'catalog/blog_category')) {
                $catalog[] = array(
                    'name'     => $this->language->get('text_blog_category'),
                    'href'     => $this->url->link('catalog/blog_category', 'user_token=' . $this->session->data['user_token'], true),
                    'children' => array()
                );
            }
            ]]></add>
        </operation>
    </file>
</modification>